<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register"
    tools:context=".RegisterPage">
    <TextView
        android:id="@+id/hi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hi"
        android:textColor="@color/white"
        android:text="Sign up to start listening to all"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/your"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign"
        android:text="your favourite artists"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/user"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/your"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="@color/white"
        android:hint="Username"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/user"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="@color/white"
        android:hint="Password"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/password"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Email"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/mobile"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/email"
        android:textColorHint="@color/white"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:hint="Mobile"
        android:layout_marginLeft="30dp"
        />
    <Button
        android:id="@+id/Registerr"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@id/mobile"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/black"
        android:text="Register"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/vie"
        android:layout_width="80dp"
        android:layout_below="@+id/Registerr"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or continue with"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_below="@+id/Registerr"
        android:layout_marginTop="28dp"
        android:textSize="15dp"
        android:layout_marginLeft="122dp"

        />
    <View
        android:id="@+id/view"
        android:layout_width="80dp"
        android:layout_below="@+id/Registerr"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:layout_marginLeft="240dp"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/Google"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@id/view"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/black"
        android:text="Google"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/Facebook"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@id/view"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="187dp"
        android:backgroundTint="@color/black"
        android:text="Facebook"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need an account?"
        android:layout_below="@+id/Facebook"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_marginLeft="80dp"
        />
    <TextView
        android:id="@+id/sig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Facebook"
        android:layout_marginTop="20dp"
        android:textColor="@color/green"
        android:text="Sign in"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/already"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>