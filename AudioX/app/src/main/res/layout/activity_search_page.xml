<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SearchPage">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            app:menu="@menu/menu"
            android:background="@color/black"
            android:backgroundTint="@color/normalDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon"
                android:src="@drawable/b"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent searches"
        android:layout_below="@+id/app"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:textSize="19dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/viewAll"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/app"
        android:text="View all"
        android:backgroundTint="@color/normalDark"
        android:layout_marginLeft="250dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView8"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_below="@+id/recent"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        card_view:cardCornerRadius="10dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/b"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/john"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John"
        android:layout_below="@+id/recent"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:layout_below="@+id/john"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_play_arrow_24"
        android:layout_below="@+id/viewAll"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="25dp"
        />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView9"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_below="@+id/cardView8"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        card_view:cardCornerRadius="10dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/taylor"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/Marrie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="marrie"
        android:layout_below="@+id/artist"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/artist1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:layout_below="@+id/Marrie"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/play2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_play_arrow_24"
        android:layout_below="@+id/play1"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="39dp"
        />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView10"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_below="@+id/cardView9"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        card_view:cardCornerRadius="10dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/b"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/Days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000Days"
        android:layout_below="@+id/artist1"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/artist2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:layout_below="@+id/Days"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/play3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_play_arrow_24"
        android:layout_below="@+id/play2"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="45dp"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView11"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_below="@+id/cardView10"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp"
        card_view:cardCornerRadius="10dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/taylor"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/together"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Together"
        android:layout_below="@+id/artist2"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/artist3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:layout_below="@+id/together"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/play4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_play_arrow_24"
        android:layout_below="@+id/play3"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/based"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Based on what you like"
        android:layout_below="@+id/cardView11"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:textSize="19dp"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView7"
        android:layout_marginTop="20dp"
        android:layout_width="121dp"
        android:layout_below="@+id/based"
        android:layout_marginLeft="20dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="4dp">
    <ImageView
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:src="@drawable/laptop"
        android:layout_gravity="center"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indie Mix"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView6"
        android:layout_marginTop="20dp"
        android:layout_width="121dp"
        android:layout_below="@+id/based"
        android:layout_marginLeft="190dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/spotify2"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="House Mix"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_marginTop="20dp"
        android:layout_width="121dp"
        android:layout_below="@+id/cardView7"
        android:layout_marginLeft="20dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/spotify3"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pop Mix"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardVieww"
        android:layout_marginTop="20dp"
        android:layout_width="121dp"
        android:layout_below="@+id/cardView6"
        android:layout_marginLeft="190dp"
        android:layout_height="80dp"
        card_view:cardCornerRadius="4dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/laptop"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chill Mix"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/normalDark"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:menu="@menu/button_navbar_menu"
        />
</RelativeLayout>