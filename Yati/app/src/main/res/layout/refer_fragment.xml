<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReferFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22sp"
        android:layout_marginLeft="22sp"
        android:layout_marginRight="22sp"
        android:text="@string/refer_insruction"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/refer_image"
        android:scaleType="center">
    </ImageView>

    <Button
        android:id="@+id/invite_button"
        android:text="@string/invite_button"
        android:background="@drawable/invite_layout_style"
        android:layout_alignParentBottom= "true"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        />

</RelativeLayout>